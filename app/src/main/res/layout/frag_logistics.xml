<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@drawable/ic_main_top"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/ll_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/sel_border_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_restaurant"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_meal"
                android:text="餐厅"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_haircut"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_haircut"
                android:text="理发店"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_drugstore"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_drugstore"
                android:text="药店"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_shuttle_bus"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_regular_bus"
                android:text="班车"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_laundry"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_laundry"
                android:text="洗衣店"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_stadium"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_stadium"
                android:text="运动场"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_maintain"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_logistics_maintain"
                android:text="警营维修"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_physical_therapy"
                style="@style/style_font_logistics_function"
                android:drawableTop="@drawable/svg_physical_therapy"
                android:text="理疗"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_font_black"
            android:layout_marginStart="@dimen/dp_15"
            android:drawableStart="@drawable/svg_logistics_notice"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="公告"
            android:textColor="@color/color_black" />

        <TextView
            style="@style/style_font_gray_small"
            android:text=" 丨 今天运动场已满" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/sel_border_white"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/ll_meal"
            style="@style/style_mine_layout_weight"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/style_common_icon"
                android:background="@drawable/sel_mine_red"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_mine_meal" />

            <TextView
                style="@style/style_font_black"
                android:layout_marginTop="@dimen/dp_5"
                android:text="订餐记录"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_repair"
            style="@style/style_mine_layout_weight"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/style_common_icon"
                android:background="@drawable/sel_mine_blue"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_mine_fixup" />

            <TextView
                style="@style/style_font_black"
                android:layout_marginTop="@dimen/dp_5"
                android:text="维修记录"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reserve"
            style="@style/style_mine_layout_weight"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/style_common_icon"
                android:background="@drawable/sel_mine_orange"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_mine_order" />

            <TextView
                style="@style/style_font_black"
                android:layout_marginTop="@dimen/dp_5"
                android:text="预约记录"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_consume"
            style="@style/style_mine_layout_weight"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/style_common_icon"
                android:background="@drawable/sel_mine_yellow"
                android:contentDescription="@string/app_name"
                android:padding="0dp"
                android:src="@drawable/svg_mine_consume" />

            <TextView
                style="@style/style_font_black"
                android:layout_marginTop="@dimen/dp_5"
                android:text="消费记录"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/sel_border_white"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_office_supplies"
            style="@style/style_font_black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@drawable/svg_logistics_office_supplies"
            android:gravity="center"
            android:text="办公用品申报" />

        <TextView
            android:id="@+id/tv_vehicle_apply"
            style="@style/style_font_black"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_weight="1"
            android:drawableStart="@drawable/svg_logistics_vehicle_apply"
            android:gravity="center"
            android:text="用车管理申报" />

    </LinearLayout>


</LinearLayout>