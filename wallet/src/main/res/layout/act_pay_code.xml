    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_260"
        android:layout_marginTop="@dimen/dp_50"
        android:contentDescription="@string/placeholder"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        tools:src="@drawable/svg_pay_qr_code" />

    <TextView
        android:id="@+id/tv_prompt"
        style="@style/style_font_black_big"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:text="提示："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_qr_code" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/style_font_black"
        android:layout_marginTop="@dimen/dp_5"
        android:text="用于就餐支付时，每个就餐时间只可支付一次"
        app:layout_constraintStart_toStartOf="@id/tv_prompt"
        app:layout_constraintTop_toBottomOf="@id/tv_prompt" />

</androidx.constraintlayout.widget.ConstraintLayout>