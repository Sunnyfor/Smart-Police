<resources>

    <!--TabLayout字体样式-->

    <style name="style_tab_layout_normal" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="style_tab_layout_checked" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <!--后勤功能区-->

    <style name="style_font_logistics_function" parent="style_font_black">
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!--通用橙色字体-->

    <style name="style_font_orange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_orange</item>
    </style>

    <style name="style_font_orange_small" parent="style_font_orange">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_font_black_small" parent="style_font_orange">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/fun_logistics_666666</item>
    </style>

    <style name="style_font_orange_smaller" parent="style_font_orange">
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="style_font_black_largers" parent="style_font_orange">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/fun_2963E0</item>
    </style>

    <style name="style_font_black_larger" parent="style_font_orange">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/fun_333333</item>
    </style>

    <style name="style_font_white_larger" parent="style_font_orange">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/fun_FFFFFF</item>
    </style>

    <style name="style_font_orange_big" parent="style_font_orange">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="style_font_orange_bigger" parent="style_font_orange">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!--【个人资料】子条目样式-->

    <style name="style_mine_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
    </style>

    <!--【个人资料】子条目编辑框样式-->

    <style name="style_mine_item_edit" parent="style_common_edit">
        <item name="android:background">@drawable/sel_border_gray</item>
    </style>

    <!--【订餐】子条目样式-->

    <style name="style_register_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
    </style>

    <!--【订餐】子条目右侧字体-->

    <style name="style_register_item_text" parent="style_font_black_big">
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="popWindow_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--标题栏样式-->

    <style name="style_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:background">@color/color_transparent</item>
    </style>

    <!--通用圆形图片样式-->

    <style name="style_image_circle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/svg_default_head</item>
    </style>

    <!--【个人界面】按钮布局：收藏、积分、福利-->

    <style name="style_mine_layout_weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--【个人界面】卡片样式-->

    <style name="style_mine_layout_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:background">@drawable/sel_border_white_stroke</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <!--【个人界面】功能布局：基本信息、个人简介、用户反馈-->

    <style name="style_mine_item_function" parent="style_font_black_small">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/dp_5</item>
        <item name="android:gravity">center</item>
    </style>

    <!--    【审批界面】基本信息标注样式-->
    <style name="style_font_audit_function">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/fun_999999</item>
    </style>

    <!--    【审批界面】基本信息详情 字体样式-->
    <style name="style_font_audit_text_latyou" parent="style_font_audit_function">
        <item name="android:textColor">@color/fun_333333</item>
    </style>

    <style name="style_button_layout" parent="style_mine_layout_weight">
        <item name="android:textColor">@color/fun_476FFF</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginStart">@dimen/dp_40</item>
    </style>

    <style name="style_button_checked_layout" parent="style_mine_layout_weight">
        <item name="android:textColor">@color/fun_FFFFFF</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_40</item>
    </style>

    <!--   理发代理预约布局-->
    <style name="haircut_agency_haircut_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_66</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="cardBackgroundColor">@color/color_white</item>
        <item name="cardElevation">@dimen/dp_10</item>
        <item name="cardCornerRadius">@dimen/dp_4</item>
    </style>

    <style name="style_font_agency_medium_black" parent="@style/style_font_white_larger">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_marginStart">@dimen/dp_21</item>
        <item name="android:layout_marginTop">@dimen/dp_26</item>
    </style>

    <style name="style_layout_mine_function">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:background">@color/color_white</item>
    </style>
</resources>