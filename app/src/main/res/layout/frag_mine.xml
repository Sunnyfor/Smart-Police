        <!--订单记录-->

        <LinearLayout
            android:id="@+id/ll_function"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_login">

            <LinearLayout
                android:id="@+id/ll_meal"
                style="@style/style_mine_layout_weight"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/style_common_icon"
                    android:background="@drawable/sel_mine_red"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_mine_meal" />

                <TextView
                    style="@style/style_font_black_small"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="订餐记录"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_repair"
                style="@style/style_mine_layout_weight"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/style_common_icon"
                    android:background="@drawable/sel_mine_blue"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_mine_fixup" />

                <TextView
                    style="@style/style_font_black_small"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="维修记录"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reserve"
                style="@style/style_mine_layout_weight"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/style_common_icon"
                    android:background="@drawable/sel_mine_orange"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_mine_order" />

                <TextView
                    style="@style/style_font_black_small"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="预约记录"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_consume"
                style="@style/style_mine_layout_weight"
                tools:ignore="UseCompoundDrawables">

                <ImageView

                    style="@style/style_common_icon"
                    android:background="@drawable/sel_mine_yellow"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/dp_1"
                    android:src="@drawable/svg_mine_consume" />

                <TextView
                    style="@style/style_font_black_small"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="消费记录"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_18"
            android:background="@drawable/sel_red_circle"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/ll_function"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll_function" />

        <!--钱包模块-->

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_mine_wallet"
            app:layout_constraintStart_toStartOf="@id/v_login"
            app:layout_constraintTop_toBottomOf="@id/ll_function" />

        <TextView
            android:id="@+id/tv_wallet"
            style="@style/style_font_black"
            android:layout_marginStart="@dimen/dp_10"
            android:text="我的钱包"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintTop_toTopOf="@id/iv_icon"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/style_font_orange_small"
            android:text="查看余额"
            app:layout_constraintBottom_toBottomOf="@id/btn_recharge"
            app:layout_constraintStart_toStartOf="@id/tv_wallet"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_recharge"
            style="@style/style_font_white_small"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/sel_mine_recharge"
            android:text="充值"
            app:layout_constraintEnd_toEndOf="@id/v_login"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_withdrawal"
            style="@style/style_font_white_small"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/sel_mine_withdraw"
            android:text="提现"
            android:textColor="@color/colo_orange_ff9600"
            app:layout_constraintEnd_toStartOf="@id/btn_recharge"
            app:layout_constraintTop_toTopOf="@id/btn_recharge"
            tools:ignore="HardcodedText" />

        <!--功能区-->

        <com.zhkj.smartpolice.widget.ItemLayout
            android:id="@+id/item_help"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_56"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:endIcon="@drawable/svg_btn_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ll_function"
            app:layout_constraintTop_toBottomOf="@id/tv_money"
            app:lineVisible="true"
            app:startAfterText="帮助"
            app:startAfterTextColor="@color/color_black"
            app:startIcon="@drawable/svg_mine_help" />

        <com.zhkj.smartpolice.widget.ItemLayout
            android:id="@+id/item_about"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_56"
            app:endIcon="@drawable/svg_btn_more"
            app:layout_constraintEnd_toEndOf="@id/item_help"
            app:layout_constraintStart_toStartOf="@id/item_help"
            app:layout_constraintTop_toBottomOf="@id/item_help"
            app:lineVisible="true"
            app:startAfterText="关于产品"
            app:startAfterTextColor="@color/color_black"
            app:startIcon="@drawable/svg_mine_about" />

        <com.zhkj.smartpolice.widget.ItemLayout
            android:id="@+id/item_setting"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_56"
            app:endIcon="@drawable/svg_btn_more"
            app:layout_constraintEnd_toEndOf="@id/item_help"
            app:layout_constraintStart_toStartOf="@id/item_help"
            app:layout_constraintTop_toBottomOf="@id/item_about"
            app:lineVisible="true"
            app:startAfterText="设置"
            app:startAfterTextColor="@color/color_black"
            app:startIcon="@drawable/svg_mine_setting" />

        <com.zhkj.smartpolice.widget.ItemLayout
            android:id="@+id/item_fingerprint"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_56"
            app:endIcon="@drawable/svg_btn_more"
            app:layout_constraintEnd_toEndOf="@id/item_help"
            app:layout_constraintStart_toStartOf="@id/item_help"
            app:layout_constraintTop_toBottomOf="@id/item_setting"
            app:lineVisible="true"
            app:startAfterText="设置指纹"
            app:startAfterTextColor="@color/color_black"
            app:startIcon="@drawable/svg_mine_fingerprint" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>