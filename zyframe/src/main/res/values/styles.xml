<resources>
    <!-- Base application theme. -->
    <style name="ZyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/color_theme</item>
        <item name="colorPrimary">@color/color_theme</item>
        <item name="colorAccent">@color/color_theme</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <!--通用对话框样式-->

    <style name="style_common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--通用对话框布局样式-->

    <style name="style_common_dialog_layout">
        <item name="android:layout_width">@dimen/dp_260</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/sel_border_white_stroke</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--通用图标样式-->

    <style name="style_common_icon">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <!--通用横线分割样式-->

    <style name="style_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!--通用竖线分割样式-->

    <style name="style_line_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!--通用EditText样式-->

    <style name="style_common_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
    </style>

    <style name="style_common_edit_multi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:background">@drawable/sel_border_gray</item>
    </style>

    <!--通用黑色字体-->

    <style name="style_font_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="style_font_black_smaller" parent="style_font_black">
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="style_font_black_small" parent="style_font_black">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_font_black_big" parent="style_font_black">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="style_font_black_bigger" parent="style_font_black">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!--通用白色字体-->

    <style name="style_font_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="style_font_white_small" parent="style_font_white">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_font_white_smaller" parent="style_font_white">
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="style_font_white_big" parent="style_font_white">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="style_font_white_bigger" parent="style_font_white">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!--通用灰色字体-->

    <style name="style_font_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_gray</item>
    </style>

    <style name="style_font_gray_smaller" parent="style_font_gray">
        <item name="android:textSize">@dimen/sp_10</item>
    </style>

    <style name="style_font_gray_small" parent="style_font_gray">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_font_gray_big" parent="style_font_gray">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>


    <!--菜单CardView样式-->
    <style name="style_item_card_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_45</item>
    </style>

    <!--菜单条目字体样式-->
    <style name="style_item_card_font" parent="style_font_black">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_item_card_img">
        <item name="android:layout_width">@dimen/dp_15</item>
        <item name="android:layout_height">@dimen/dp_15</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/svg_more</item>
        <item name="contentDescription">@string/placeholder</item>
    </style>

