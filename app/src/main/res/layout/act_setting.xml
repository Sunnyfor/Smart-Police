    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_version"
            style="@style/style_font_black"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_30"
            android:gravity="center_vertical"
            android:text="开启指纹登录" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swcBtn_finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20" />

    </RelativeLayout>

    <View
        style="@style/style_line_horizontal"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20" />


    <com.zhkj.smartpolice.widget.ItemLayout
        android:id="@+id/item_fingerprint"
        style="@style/style_register_item_layout"
        app:endIcon="@drawable/svg_btn_more"
        app:lineVisible="true"
        app:startAfterText="设置指纹" />

    <com.zhkj.smartpolice.widget.ItemLayout
        android:id="@+id/item_face"
        style="@style/style_register_item_layout"
        app:endIcon="@drawable/svg_btn_more"
        app:lineVisible="true"
        app:startAfterText="设置人脸" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        style="@style/style_common_btn"
        android:layout_marginTop="@dimen/dp_80"
        android:text="退出登录"
        tools:ignore="HardcodedText" />

