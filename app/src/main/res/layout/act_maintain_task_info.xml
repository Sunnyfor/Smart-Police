<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_F2F2F2">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_160"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/sel_maintain_apply_border">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修装备名称：" />

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_150"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@null"
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@color/bg_DCDCDC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修申请人姓名："
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_apply_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_150"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_80"
            android:background="@color/bg_DCDCDC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_80"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修人手机号："
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_apply_cellphone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_150"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@color/bg_DCDCDC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修类型："
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_repair_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_150"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_200"
        android:layout_below="@id/rl_layout"
        android:layout_marginStart="9dp"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/sel_maintain_apply_border">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修员姓名："
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_maintainer_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_130"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@null"
                android:inputType="text"
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@color/bg_DCDCDC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修员手机号："
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_maintainer_cellphone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_130"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@null"
                android:inputType="number"
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_80"
            android:background="@color/bg_DCDCDC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_80"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修地点部门："
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_section"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_130"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_120"
            android:background="@color/bg_DCDCDC" />

        <RelativeLayout
            android:id="@+id/rl_date_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_120"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修完成时间："
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/style_font_black_largers"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_24"
                android:text="请选择" />

            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/sp_15"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_9"
                android:background="@drawable/svg_right_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_160"
            android:background="@color/bg_DCDCDC" />

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:text="维修原因："
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_130"
                android:layout_marginEnd="@dimen/dp_20"
                android:ellipsize="end"
                android:maxEms="7"
                android:singleLine="true"
                android:textColor="@color/fun_3E3E3E"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_two"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_6"
        android:text="上传图片"
        android:textColor="@color/fun_3E3E3E"
        android:textSize="@dimen/sp_14" />

    <GridView
        android:id="@+id/gv_uploading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_return"
        android:layout_below="@id/rl_two"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:horizontalSpacing="@dimen/dp_20"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dp_5" />

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/fun_999999"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_maintain_put"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/color_login_button"
        android:gravity="center"
        android:text="确认维修"
        android:textColor="@color/fun_FFFFFF"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>