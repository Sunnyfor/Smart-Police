<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_oneself"
        style="@style/haircut_agency_haircut_layout"
        android:layout_marginTop="@dimen/dp_11">

        <TextView
            style="@style/style_font_agency_medium_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给自己预约" />

        <RadioButton
            android:id="@+id/rb_oneself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_298"
            android:layout_marginTop="@dimen/dp_15" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_lead"
        style="@style/haircut_agency_haircut_layout"
        android:layout_marginTop="@dimen/dp_13">

        <TextView
            style="@style/style_font_agency_medium_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给领导预约" />

        <RadioButton
            android:id="@+id/rb_lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_298"
            android:layout_marginTop="@dimen/dp_15" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:text="姓名"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/fun_999999"
            android:textSize="@dimen/sp_12"
            tools:text="张三" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_48"
            android:background="@color/color_DBDBDB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_67"
            android:text="手机号"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_67"
            android:textColor="@color/fun_999999"
            android:textSize="@dimen/sp_12"
            tools:text="13788415631" />
    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/style_font_agency_medium_black"
        android:text="选择预约时间"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:paddingStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_13"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <TextView
        style="@style/style_font_agency_medium_black"
        android:text="选择时间段"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15" />
    
    <TextView
        android:layout_width="@dimen/dp_275"
        android:layout_height="@dimen/dp_40"
        android:text="立即预约"
        android:gravity="center"
        android:background="#2963DF"
        android:textColor="@color/fun_FFFFFF"
        android:layout_marginStart="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_40"/>
</LinearLayout>