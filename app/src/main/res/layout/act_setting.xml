    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.zhkj.smartpolice.widget.ItemLayout
        android:id="@+id/item_name"
        style="@style/style_register_item_layout"
        app:endText="@string/app_name"
        app:lineVisible="true"
        app:startAfterText="登录账号" />

    <com.zhkj.smartpolice.widget.ItemLayout
        android:id="@+id/item_modify_pwd"
        style="@style/style_register_item_layout"
        app:endIcon="@drawable/svg_btn_more"
        app:lineVisible="true"
        app:startAfterText="修改密码" />

    <com.zhkj.smartpolice.widget.ItemLayout
        android:id="@+id/item_cache"
        style="@style/style_register_item_layout"
        app:endIcon="@drawable/svg_btn_more"
        app:endText="@string/app_name"
        app:lineVisible="true"
        app:startAfterText="清除缓存" />


