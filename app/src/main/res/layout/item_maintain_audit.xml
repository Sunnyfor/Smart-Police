<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_340"
    android:layout_height="@dimen/dp_165"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/dp_10"
    android:background="@drawable/sel_audit_border_background"
    android:layout_marginBottom="@dimen/dp_11">

    <TextView
        android:id="@+id/tv_apply_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2020-04-16 22:14"
        style="@style/style_font_black_larger"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_11"/>

    <TextView
        android:id="@+id/tv_audit_status"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_22"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_9"
        android:background="@drawable/sel_maintain_audit_type_background"
        android:text="待审核"
        android:gravity="center"
        android:textColor="@color/font_white"
        android:textSize="@dimen/sp_12"/>

    <View
        android:id="@+id/v_string"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/bg_DCDCDC"
        android:layout_marginTop="@dimen/dp_41"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_maintain_img"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_below="@id/v_string"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@drawable/svg_default_image"/>

    <TextView
        android:id="@+id/tv_dept_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="部门-后勤部"
        android:layout_below="@id/v_string"
        android:layout_toEndOf="@id/iv_maintain_img"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_10"
        style="@style/style_font_black_larger"/>
    
    <TextView
        android:id="@+id/tv_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="物品：灯具"
        style="@style/style_font_black_small"
        android:layout_below="@id/tv_dept_name"
        android:layout_toEndOf="@id/iv_maintain_img"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_19"/>

    <TextView
        android:id="@+id/tv_style_font_black_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="问题描述：灯不亮"
        android:layout_below="@id/tv_goods"
        style="@style/style_font_black_small"
        android:layout_toEndOf="@id/iv_maintain_img"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_9"
        android:ellipsize="end"
        android:lines="1"/>
</RelativeLayout>